<script type="text/javascript">

        function Slider()
        {
            $("#1").fadeIn(500);
            $("#1").delay(3000).fadeOut(2000);

            var sc = $(".slider img").size();
            var count = 2;

            setInterval(function()
            {
                $("#" + count).fadeIn(3000);
                $("#" + count).delay(3000).fadeOut(2000);

                if (count == sc)
                {
                    count = 1;
                }

                else
                {
                    count = count + 1;

                }

            }, 6500);
        }

</script>

