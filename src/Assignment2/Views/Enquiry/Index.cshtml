@model Assignment2.Models.Enquiry

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        table {
            border: 1px solid #ccc;
            border-collapse: collapse;
            background-color: #fff;
            align-content: center;
        }

            table.center {
                margin-left: auto;
                margin-right: auto;
            }

        .information {
            bottom: 50px;
            text-align: center;
            border: solid;
            font-family: Cambria;
            font-size: 20px;
        }

        table th {
            background-color: #B8DBFD;
            color: #333;
            font-weight: bold;
        }

        table th, table td {
            padding: 5px;
            border: 1px solid #ccc;
        }

        table, table table td {
            border: 0px solid #ccc;
        }

        input[type=text], select {
            width: 150px;
        }
    </style>
</head>
<body>
    <p class="information">
        ABCCC hosts special corporate events to raise money.<br /> You can submit your enquiries about these special events.<br />
        Please use the form below to submit your enquiries to the admin personnel's email.
    </p>

    @using (Html.BeginForm("Index", "Enquiry", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <table class="center" cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Enquiry Form</th>
            </tr>
            <tr>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <td>@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" }) </td>
                <td>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th colspan="2" align="center"></th>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" }) </td>
                <td>
                    @Html.TextAreaFor(enq => enq.Message, new { @rows = 10, @cols = 60 })<br />
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }

